<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_app_notification_small_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorDeepGray"
    android:layout_height="65dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_app_notification_small_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_8dp" />

        <TextView
            android:id="@+id/tv_app_notification_small_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_app_notification_small_weather_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_8dp"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_32dp" />

        <TextView
            android:id="@+id/tv_app_notification_small_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_app_notification_small_temp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_12dp"/>

        <TextView
            android:id="@+id/tv_app_notification_small_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_app_notification_small_temp"
            android:layout_above="@id/tv_app_notification_small_weather_desc"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_12dp"/>

        <TextView
            android:id="@+id/tv_app_notification_small_temp_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_app_notification_small_temp"
            android:layout_below="@id/tv_app_notification_small_weather_desc"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_12dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_app_notification_small_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_12dp"/>

        <TextView
            android:id="@+id/tv_app_notification_small_dayofweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_app_notification_small_date"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_12dp"/>

        <TextView
            android:id="@+id/tv_app_notification_small_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_app_notification_small_dayofweek"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorDarkGray600"
            android:textSize="@dimen/material_8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_app_notification_small_air_quality_index"
            android:layout_width="@dimen/material_56dp"
            android:layout_height="@dimen/material_24dp"
            android:gravity="center"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_20dp"
            android:background="@drawable/shape_top_round_rect_semitrans_gray" />

        <TextView
            android:id="@+id/tv_app_notification_small_air_quality_type"
            android:layout_width="@dimen/material_56dp"
            android:layout_height="@dimen/material_24dp"
            android:layout_alignLeft="@id/tv_app_notification_small_air_quality_index"
            android:layout_below="@id/tv_app_notification_small_air_quality_index"
            android:gravity="center"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/material_12dp"
            android:background="@drawable/shape_bottom_round_rect_semitrans_gray" />

    </RelativeLayout>

</LinearLayout>