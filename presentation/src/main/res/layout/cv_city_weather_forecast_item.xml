<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/material_2dp"
    android:paddingBottom="@dimen/material_2dp"
    android:paddingLeft="@dimen/material_8dp"
    android:paddingRight="@dimen/material_8dp">

    <TextView
        android:id="@+id/tv_city_weather_forecast_item_date"
        android:layout_weight="1"
        android:layout_width="@dimen/material_0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:gravity="left" />

    <TextView
        android:id="@+id/tv_city_weather_forecast_item_centigrade"
        android:layout_weight="1"
        android:layout_width="@dimen/material_0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:gravity="left" />

    <TextView
        android:id="@+id/tv_city_weather_forecast_item_weather_desc"
        android:layout_weight="1"
        android:layout_width="@dimen/material_0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:gravity="right" />

</LinearLayout>