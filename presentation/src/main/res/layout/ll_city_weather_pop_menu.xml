<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/barrage_popupwindow_bg">

    <LinearLayout
        android:id="@+id/ll_pop_menu_item_refresh"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_8dp"
        android:paddingBottom="@dimen/material_8dp"
        android:paddingLeft="@dimen/material_16dp"
        android:paddingRight="@dimen/material_16dp"
        android:background="@drawable/selector_button_rect_semitrans"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_pop_menu_item_refresh_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="@dimen/material_16dp"
            android:src="@drawable/ic_refresh_white_24dp"/>

        <TextView
            android:id="@+id/tv_pop_menu_item_refresh_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="@string/refresh"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_1dp"
        android:background="@color/colorSemiTransLightGray"/>

    <LinearLayout
        android:id="@+id/ll_pop_menu_item_settings"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_8dp"
        android:paddingBottom="@dimen/material_8dp"
        android:paddingLeft="@dimen/material_16dp"
        android:paddingRight="@dimen/material_16dp"
        android:background="@drawable/selector_button_rect_semitrans"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_pop_menu_item_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="@dimen/material_16dp"
            android:src="@drawable/ic_settings_white_24dp"/>

        <TextView
            android:id="@+id/tv_pop_menu_item_settings_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="@string/settings"/>

    </LinearLayout>

</LinearLayout>